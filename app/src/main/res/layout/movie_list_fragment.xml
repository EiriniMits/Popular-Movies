<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_list"
        android:name="me.eirinimitsopoulou.popularmovies.MovieListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="GridLayoutManager"
        app:spanCount="2"
        tools:context="me.eirinimitsopoulou.popularmovies.MainActivity"
        tools:listitem="@layout/movie_poster_fragment" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/loading"
        android:layout_height="@dimen/loading"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="@dimen/cardElevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageHeight2"
                android:focusable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/poster"
                android:lines="2"
                android:paddingLeft="@dimen/cardview_padding"
                android:paddingRight="@dimen/cardview_padding"
                android:paddingTop="@dimen/cardview_padding"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginRight="@dimen/cardview_padding"
                android:gravity="right"
                android:paddingBottom="3dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>